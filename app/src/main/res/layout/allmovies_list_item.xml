<?xml version="1.0" encoding="utf-8"?>
<com.aurum.everytrailer.utils.RoundedCornerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/allmovie_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/talvar_bg"
        android:tint="#70000000" />

    <TextView
        android:id="@+id/allmovies_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/allmovies_text_border"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="Hindi"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</com.aurum.everytrailer.utils.RoundedCornerFrameLayout>