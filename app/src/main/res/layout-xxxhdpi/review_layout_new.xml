<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/review_profile_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/actionbar_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameadp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Varun Barve"
                android:textColor="#424242"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dateadp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="5 days ago"
                android:textSize="10sp" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingbaradp"
            style="@style/reviewRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/despadp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iss movie mein enjoy kariye bollywood mein debut krne wali....Introducing Ferrari, Hummer, Lamborghini, Bugatti!" />


        <LinearLayout
            android:id="@+id/countlike_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/likeimg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/likereview" />

            <TextView
                android:id="@+id/countlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="1223"
                android:textColor="#424242"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>